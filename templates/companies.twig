{% extends "base.twig" %}
{% block head %}
{% endblock %}
{% block content %}
{% if mailUserLogued %}
<div class="card w-100">
	<div class="containerTable" id="containerCompanies">
		<table class="table">
			<thead>
				<div class="d-flex justify-content-between">
					<div class="">
						<p id="indexCompanieWork" class="font-weight-bold pl-2">&nbsp;Trabajando con&nbsp;<a href="{{ path_for('Companies')}}/{{rutUserLogued}}">{{companieUserLogued}}</a></p>
					</div>
					<div class="col-5">
						<div class="form__group field">
							<input type="text" id="" class="form__field" onkeyup="searchCompaniesFromList(this.value)" placeholder="Buscar empresa" />
						</div>
					</div>
				</div>
				<tr>
					<th>Razón social</th>
					<th scope="col">
						<div class="dropdown" id="dopdownClientFilter" >


					        <button type="button" class="buttonNoStyle dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="dropdownMenu">
					        	Estado
					        	<span class="material-icons fa-sm">filter_list</span>
					        </button>


					        <div id="idOrderBudgetClientFilter" class="dropdown-menu" aria-labelledby="dropdownMenu">

					          <div class="text-center">

					            <div class="subtexto divAsAnchor" onclick="selectAllOpBudgetListClientFilter()">
					            	Seleccionar todo
					            </div>

					            <p class="subtexto" style="color: #007bff;text-decoration: none;display:inline-block;">-</p>

					            <div class="subtexto divAsAnchor" onclick="unselectOpBudgetListClientFilter()">
					            	Borrar
					            </div>
					          </div>


					        <form id="idFormBudgetListClientFilter" >
					        	<div class="overflow-auto" style="height:20vh;">
					            	<div class="dropdown-item">
					            		<label >Pendiente usuario</label>
					            	</div>
						            <div class="dropdown-item">
						            	<label>Pendiente postulación</label>
						            </div>
						            <div class="dropdown-item">
						            	<label>Pendiente aprobación</label>
						            </div>
						            <div class="dropdown-item">
						            	<label>Pendiente certificación</label>
						            </div>
						            <div class="dropdown-item">
						            	<label>Pendiente resolución</label>
						            </div>
						            <div class="dropdown-item">
						            	<label>Emisor habilitado</label>
						            </div>
						            <div class="dropdown-item">
						            	<label>Emisor no habilitado</label>
						            </div>
						            <div class="dropdown-item">
						            	<label>En espera para comenzar</label>
						            </div>
					        	</div>
					            <div class="d-flex float-right mr-4">
					              <button type="button" name="" class="btn btn-light"onclick="$('#dropdownMenu').dropdown('hide')">Cancelar</button>
					              <button type="button" name="" class="btn btn-success" onclick="formBudgetListClientFilter()">Aceptar</button>
					            </div>


					    	</form>


				        </div>
				      </div>
			    	</th>
					<th>Vencimientos</th>
					<th>CAEs disponibles</th>
				</tr>
			</thead>
			<tbody id="tbodyCompaniesList"></tbody>
		</table>
	</div>
</div>
{% else %}
<h3 class="text-template-background font-italic text-center">ADMINISTRADOR de EFACTURA</h3>
{% endif %}
{% block script %}
<script type="text/javascript" src="{{ path_for('Start') }}scripts/companies.js{{ version }}"></script>
<script type="text/javascript" >

	$(document).ready(()=>{
		loadCompanies();
	})


</script>
{% endblock %}
{% endblock %}