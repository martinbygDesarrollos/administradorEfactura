{% extends "base.twig" %}
{% block head %}
{% endblock %}
{% block content %}
{% if mailUserLogued %}
<div class="card w-100">
	<div class="containerTable" id="containerCompany">
		<div class="" style="border-bottom: 0.1rem solid lightgrey;">
			<p id="indexCompanieWork" class="font-weight-bold pl-2">&nbsp;Trabajando con&nbsp;<a href="{{ path_for('Start')}}empresas/{{rutUserLogued}}">{{companieUserLogued}}</a></p>
		</div>
		<div class="w-100" style="">
			<div class="" style="display:flex; justify-content: space-around;">
				<div class="col">
				</div>
				<div class="col-6">
					<div >
						<input type="text" class="form__field" placeholder="Buscar empresa" style="height: 2.5rem;" id="emisoresSearchBar" onkeyup="if (event.keyCode === 13) {$('#emisoresSearchButton').click()};" />
					</div>
				</div>
				<div>
					<button style="background-color: transparent; border: none; height: 33px; width:33px;" id="emisoresSearchButton" onclick="searchEmisores()">
						<i class="fas fa-search"></i>
					</button>
				</div>
			</div>
		</div>
		<div>
			<table class="table">
				<tbody>
					<tr>
						<td class="col-2">
							<label class="font-weight-bold">RUC</label>
						</td>
						<td class="col-10">
							{# <div class="form__group field"> #}
								<input type="text" id="ruc" name="ruc" class="form__field" style="height: 2.5rem;" onchange="datachanged()" placeholder="" readonly/>
							{# </div> #}
						</td>
					</tr>
					<tr>
						<td class="col-2">
							<label class="font-weight-bold">Denominación</label>
						</td>
						<td class="col-10">
						{# <div class="form__group field"> #}
							<input type="text" id="denominacion" name="denominacion" style="height: 2.5rem;" onchange="datachanged()" class="form__field" placeholder="" readonly/>
						{# </div> #}
						</td>
					</tr>
					<tr>
						<td class="col-2">
							<label class="font-weight-bold">Mail</label>
						</td>
						<td class="col-10">
						{# <div class="form__group field"> #}
							<input type="text" id="mail" name="mail" class="form__field" style="height: 2.5rem;" onchange="datachanged()" placeholder="" readonly/>
						{# </div> #}
						</td>
					</tr>
					<tr>
						<td class="col-2">
							<label class="font-weight-bold">Contacto técnico</label>
						</td>
						<td class="col-10">
						{# <div class="form__group field"> #}
							<input type="text" id="contacto" name="contacto" class="form__field" style="height: 2.5rem;" onchange="datachanged()" placeholder="" readonly/>
						{# </div> #}
						</td>
					</tr>
					
					{# ---------------------------------------------------- #}
					<tr class="hide">
						<td class="col-2">
							<label class="font-weight-bold">Fecha inicio</label>
						</td>
						<td class="col-10">
						{# <div class="form__group field"> #}
							<input type="text" id="inicio" name="inicio" class="form__field" style="height: 2.5rem;" onchange="datachanged()" placeholder="" readonly/>
						{# </div> #}
						</td>
					</tr>
					<tr class="hide">
						<td class="col-2">
							<label class="font-weight-bold">Fecha fin</label>
						</td>
						<td class="col-10">
						{# <div class="form__group field"> #}
							<input type="text" id="fin" name="fin" class="form__field" style="height: 2.5rem;" onchange="datachanged()" placeholder="" readonly/>
						{# </div> #}
						</td>
					</tr>
					<tr class="hide">
						<td class="col-2">
							<label class="font-weight-bold">Fecha fin transicion</label>
						</td>
						<td class="col-10">
						{# <div class="form__group field"> #}
							<input type="text" id="finTransicion" name="finTransicion" class="form__field" style="height: 2.5rem;" onchange="datachanged()" placeholder="" readonly/>
						{# </div> #}
						</td>
					</tr>
					<tr class="hide">
						<td class="col-2">
							<label class="font-weight-bold">Web service</label>
						</td>
						<td class="col-10">
						{# <div class="form__group field"> #}
							<input type="text" id="webService" name="webService" class="form__field" style="height: 2.5rem;" onchange="datachanged()" placeholder="" readonly/>
						{# </div> #}
						</td>
					</tr>
					<tr>
						<td class="col-2">
							<button id="btnShowHide" onclick="verMas()" style="border:none; background-color: transparent; padding: 0; color: #50adff;" >Ver más...</button>
						</td>
						<td class="col-10">
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
{% else %}
<h3 class="text-template-background font-italic text-center">ADMINISTRADOR de EFACTURA</h3>
{% endif %}
{% block script %}
<script type="text/javascript" src="{{ path_for('Start') }}scripts/companies.js{{ version }}"></script>
<script type="text/javascript" src="{{ path_for('Start') }}scripts/utils.js{{ version }}"></script>
<script type="text/javascript" >

	$(document).ready(()=>{
		//loadCompanies();
	})


</script>
{% endblock %}
{% endblock %}